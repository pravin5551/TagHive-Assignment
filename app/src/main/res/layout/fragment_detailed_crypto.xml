<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dashboard_background"
        tools:context="com.example.taghive.view.fragment.DetailedCryptoFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_cancel_back" />

        <LinearLayout
            android:id="@+id/llDeatiledFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_crypto_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_baseAsset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_quoteAsset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_openPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_lowPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_highPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_lastPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_bidPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_askPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/bitcoin"
                android:textColor="@color/purple_500"
                android:textSize="25sp"
                app:fontFamily="@font/sfuitext_bold" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>